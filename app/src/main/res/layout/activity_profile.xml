<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.ravid.myapplication.Profile">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/page_title"
                style="@style/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile" />
        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/image_event"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/textView"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/b" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/baseColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nickname"
                style="@style/new_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="NickName" />

            <TextView
                android:id="@+id/nickname_ui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="41dp"
                android:layout_marginStart="41dp"
                android:layout_toEndOf="@+id/nickname"
                android:layout_toRightOf="@+id/nickname"
                android:text="Dani"
                android:textSize="20dp" />

            <View
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/nickname"
                android:background="@color/baseColor" />

            <TextView
                android:id="@+id/mail"
                style="@style/new_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/line2"
                android:text="Mail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nickname_ui"
                android:layout_alignStart="@+id/nickname_ui"
                android:layout_below="@+id/line2"
                android:text="dani@gmail.com"
                android:textSize="20dp" />

            <View
                android:id="@+id/line3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/mail"
                android:background="@color/baseColor" />

            <TextView
                android:id="@+id/phone"
                style="@style/new_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/line3"
                android:text="Phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nickname_ui"
                android:layout_alignStart="@+id/nickname_ui"
                android:layout_below="@+id/line3"
                android:text="054-78954568"
                android:textSize="20dp" />

            <View
                android:id="@+id/line4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/phone"
                android:background="@color/baseColor" />

            <TextView
                android:id="@+id/password"
                style="@style/new_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/line4"
                android:text="Password" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nickname_ui"
                android:layout_alignStart="@+id/nickname_ui"
                android:layout_below="@+id/line4"
                android:text="*********"
                android:textSize="20dp" />

            <View
                android:id="@+id/line5"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/password"
                android:background="@color/baseColor" />
        </RelativeLayout>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
