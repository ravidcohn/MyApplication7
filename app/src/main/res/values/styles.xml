<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="new_event_title">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="new_event_repeat_day">
        <item name="android:textSize">11dp</item>
    </style>

    <style name="new_event_date_child_date_piker">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="padding_event_detail">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="padding_event_detail2">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="activity_title">
        <item name="android:textColor">@color/colorTab</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="event_main_text_color">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="event_main_icons">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="toolbar_icons">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
